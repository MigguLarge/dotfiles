{
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "filetypes": ["haskell", "lhaskell"]
        }
    },
    "prettier.tabWidth": 4,
    "emmet.includeLanguages": { "javascript": "javascriptreact", "typescript": "javascriptreact" }
}
